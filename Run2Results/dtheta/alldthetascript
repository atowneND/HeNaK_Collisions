#!/bin/bash

#outputfile=Dtheta_all.dat

#echo dj jbar Bmax >$outputfile

ctr=0
for i in $(ls dtheta_dj*dat); do
    rm foo
    echo $i
    if [ $ctr -gt 0 ]; then
        echo "#!/usr/local/gnuplot
        set term postscript
        plot '$i' u 3:7
        replot '$i' u 3:7 with lines
        set xlabel 'jbar'; set ylabel 'Bmax';set title 'Bmax vs. jbar for dj = $dj';
        replot
        set output 'Bmax_dj$(($ctr+1)).ps'
        replot
        quit" > foo
        gnuplot -persistent < foo
    elif [ $ctr -gt 30 ]; then
        exit
    fi
        let ctr=ctr+1
    #    sed '0,/^.*$/d' $i|awk '{print $2-$1 " " $3 " " $7}'>>$outputfile
done
