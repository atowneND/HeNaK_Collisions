###############
#  MY SCRIPT  #
###############


fd=alldata.dat
plotfile=plotme
tmp1file=tmp1
wbin=1
savethdata=thplottedvalues.dat
savedmdata=dmplottedvalues.dat
rm $savethdata $savedmdata 2>/dev/null
rm $plotfile 2>/dev/null
j=28;jp=31;dj=4
weightedanglehist
exit

#singlem_plot
#singlem_plot_thetabins

#exit


savethdata=thplottedvalues.dat
savedmdata=dmplottedvalues.dat
rm $savethdata $savedmdata 2>/dev/null
rm $plotfile 2>/dev/null

wbin=2
djlist=(4)
jblist=(40)

for jb in ${jblist[*]}; do
    for dj in ${djlist[*]}; do
        if [ $(($dj%2)) -eq 0 ]; then #even
            jdiff=$(($dj/2))
            j=$(($jb-$jdiff))
            jp=$(($jb+$jdiff))
        else
            jdiff=$(($dj/2))
            j=$(($jb-$jdiff))
            jp=$(($jb+$jdiff+1))
        fi

        echo running \{$j,$jp\}
        echo \#j=$j jp=$jp wbin=$wbin>>$savethdata
        echo \#j=$j jp=$jp >>$savedmdata
        anglehist
        dmhist
        weightedanglehist
        weighteddmhist
    infile=datfiles/jmp_j$j\_jp$jp\_dj$dj\.dat
eststd
        echo '' >>$savethdata
        echo '' >>$savedmdata
    done
done
